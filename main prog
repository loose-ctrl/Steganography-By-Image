import cv2
import string
import os
from IPython.display import Image
d={}
c={}

for i in range(255):
    d[chr(i)]=i
    c[i]=chr(i)
    
x=cv2.imread("1.jpg")

i=x.shape[0]     # gives resolution
j=x.shape[1]
print("\n\n\n*******Welcome to 'Lose Ctrl' project of Stenography*******\n")
print("Information About project:\nMade By:")
