key=input("Enter key : ")
text=input("\nEnter message to hide : ")

kl=0
tln = len(text)
z = 0 #decides plane
row =0 #no. of row
colu =0 #no. of column

l=len(text)

for i in range(l):
    x[row,colu,z]=d[text[i]]^d[key[kl]]
    row=row+1
    colu=colu+1
    
    kl=(kl+1)%len(key)
filename=input("\nWrite filename with extension (.jpg):")
    
cv2.imwrite(filename,x) 

print("\nYour message has been saved sucessfully")

